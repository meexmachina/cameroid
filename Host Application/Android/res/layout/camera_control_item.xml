<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_control_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/control_symbol"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center|clip_horizontal"
        android:src="@drawable/ic_widget_aperture" />

    <LinearLayout
        android:id="@+id/value_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_widget_bottom"
        android:gravity="center|clip_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/control_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="F/5.6"
            android:gravity="center"
            android:textSize="12pt"
            android:textColor="@color/widgetText"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>